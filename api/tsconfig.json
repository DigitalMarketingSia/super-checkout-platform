{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "strict": false,
        "noEmit": true,
        "baseUrl": "."
    },
    "include": [
        "**/*.ts"
    ]
}
{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "lib": [
            "ES2022"
        ],
        "noEmit": false,
        "allowSyntheticDefaultImports": true,
        "types": [
            "node"
        ],
        "esModuleInterop": true
    },
    "include": [
        "**/*.ts"
    ]
}